package main;

import java.time.LocalDateTime;
import java.time.LocalTime;

public class Process {

	private int PID;
	private String Task;
	private int Priority;
	private LocalTime Arrivaltime;
	private LocalTime Starttime;
	private LocalTime Endtime;
	private LocalTime BlockTime;
	private LocalTime BurstTime;
	public Process() {
		super();
		// TODO Auto-generated constructor stub
	}
	public Process(int pID, String task, int priority, LocalTime arrivaltime, LocalTime starttime,
			LocalTime endtime, LocalTime blockTime, LocalTime burstTime) {
		super();
		PID = pID;
		Task = task;
		Priority = priority;
		Arrivaltime = arrivaltime;
		Starttime = starttime;
		Endtime = endtime;
		BlockTime = blockTime;
		BurstTime = burstTime;
	}
	public int getPID() {
		return PID;
	}
	public void setPID(int pID) {
		PID = pID;
	}
	public String getTask() {
		return Task;
	}
	public void setTask(String task) {
		Task = task;
	}
	public int getPriority() {
		return Priority;
	}
	public void setPriority(int priority) {
		Priority = priority;
	}
	public LocalTime getArrivaltime() {
		return Arrivaltime;
	}
	public void setArrivaltime(LocalTime arrivaltime) {
		Arrivaltime = arrivaltime;
	}
	public LocalTime getStarttime() {
		return Starttime;
	}
	public void setStarttime(LocalTime starttime) {
		Starttime = starttime;
	}
	public LocalTime getEndtime() {
		return Endtime;
	}
	public void setEndtime(LocalTime endtime) {
		Endtime = endtime;
	}
	public LocalTime getBlockTime() {
		return BlockTime;
	}
	public void setBlockTime(LocalTime blockTime) {
		BlockTime = blockTime;
	}
	public LocalTime getBurstTime() {
		return BurstTime;
	}
	public void setBurstTime(LocalDateTime burstTime) {
		BurstTime = LocalTime.now();
	}
	
	public void AddRecord(){

	}

	public void RemoveRecord() {

	}

	public void RetrieveRecord() {
		
	}

	public void CalculateTotal() {
		
	}
	
	@Override
	public String toString() {
		return "PID: " + PID + ", Task: " + Task + ", Priority: " + Priority + ", Arrivaltime: " + Arrivaltime
				+ ", Starttime: " + Starttime + ", Endtime: " + Endtime + ", BlockTime: " + BlockTime + ", BurstTime: "
				+ BurstTime + "]";
	} 
	
	

}
